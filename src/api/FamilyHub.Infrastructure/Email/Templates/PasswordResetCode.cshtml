@model FamilyHub.Infrastructure.Email.Models.PasswordResetCodeModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Password Reset Code</title>
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; line-height: 1.6; color: #333; max-width: 600px; margin: 0 auto; padding: 20px; }
        .header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 30px; text-align: center; border-radius: 8px 8px 0 0; }
        .content { background: #f9fafb; padding: 30px; border: 1px solid #e5e7eb; border-top: none; }
        .code-box { background: #1f2937; color: #fff; font-size: 32px; font-weight: bold; letter-spacing: 8px; padding: 20px 30px; border-radius: 8px; text-align: center; margin: 20px 0; font-family: monospace; }
        .footer { text-align: center; padding: 20px; color: #6b7280; font-size: 14px; }
        .warning { background: #fef3c7; border: 1px solid #f59e0b; padding: 12px; border-radius: 6px; margin-top: 20px; font-size: 14px; }
        .security { background: #fee2e2; border: 1px solid #ef4444; padding: 12px; border-radius: 6px; margin-top: 20px; font-size: 14px; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Password Reset Code</h1>
    </div>
    <div class="content">
        <p>Hi there,</p>
        <p>We received a request to reset the password for your Family Hub account associated with <strong>@Model.Email</strong>.</p>

        <p>Enter this code in the app to reset your password:</p>

        <div class="code-box">
            @Model.ResetCode
        </div>

        <div class="warning">
            <strong>Note:</strong> This code will expire in @Model.ExpirationTime. After that, you'll need to request a new password reset.
        </div>

        <div class="security">
            <strong>Didn't request this?</strong> If you didn't request a password reset, you can safely ignore this email. Your password will remain unchanged. Never share this code with anyone.
        </div>
    </div>
    <div class="footer">
        <p>&copy; @DateTime.UtcNow.Year Family Hub. All rights reserved.</p>
    </div>
</body>
</html>
