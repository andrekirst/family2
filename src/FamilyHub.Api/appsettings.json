{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=familyhub;Username=familyhub;Password=familyhub"
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/FamilyHub",
    "Audience": "account",
    "Issuer": "",
    "ClientId": "familyhub-api",
    "ClientSecret": "familyhub-api-secret-change-in-production"
  },
  "CORS": {
    "Origins": "http://localhost:4200"
  },
  "Email": {
    "Host": "localhost",
    "Port": 1025,
    "Username": "",
    "Password": "",
    "FromAddress": "noreply@familyhub.local",
    "FromName": "Family Hub",
    "UseSsl": false
  },
  "App": {
    "FrontendUrl": "http://localhost:4200"
  },
  "Calendar": {
    "Cleanup": {
      "RetentionDays": 30,
      "IntervalHours": 24
    }
  },
  "Infisical": {
    "Note": "Configure via environment variables: INFISICAL_URL, INFISICAL_PROJECT_ID, INFISICAL_CLIENT_ID, INFISICAL_CLIENT_SECRET"
  },
  "GoogleIntegration": {
    "EncryptionKey": "",
    "OAuth": {
      "ClientId": "",
      "ClientSecret": "",
      "RedirectUri": "http://localhost:5152/api/google/callback",
      "Scopes": "openid email profile https://www.googleapis.com/auth/calendar.readonly https://www.googleapis.com/auth/calendar.events"
    },
    "TokenRefresh": {
      "IntervalMinutes": 30,
      "RefreshBeforeExpiryMinutes": 15
    }
  }
}
