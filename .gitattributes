# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files
*.cs text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.csproj text eol=lf
*.props text eol=lf
*.targets text eol=lf
*.md text eol=lf
*.graphql text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary
*.dll binary
*.exe binary
*.zip binary
*.tar binary
*.gz binary
